<h1>Tasks#index: List all of the tasks:</h1>

<%= link_to "Add a new task", new_task_path %>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <h2><%= task.name %></h2>
    <p><%=  task.description %></p>
    <p><%=  task.priority %></p>
    <%= link_to "show task", task_path(task)%>
    <%= link_to "edit task", edit_task_path(task)%>
    <%= link_to "delete task", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>
